{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Server",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/server/server.js",
        "cwd": "${workspaceFolder}/server",
        "envFile": "${workspaceFolder}/server/.env",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "restart": true,
        "runtimeArgs": ["--inspect"]
      }
    ]
  }
